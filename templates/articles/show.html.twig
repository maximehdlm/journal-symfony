{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}

    <div class="card mb-3 carte">
        <img class="card-img-top" src="{{asset('uploads/' ~ article.image)}}" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">{{ article.titre }}</h5>
            <p class="card-text">{{ article.description }}</p>
            <p class="card-text"><small class="text-muted">Auteur: {{ article.auteur }}</small></p>
            <div class="buttonAlign">
                <a href="{{ path('articles_edit', {'id': article.id}) }}"><button type="button" class="btn btn-success">Modifier</button></a>
                {{ include('articles/_delete_form.html.twig') }}
            </div>
        </div>
    </div>


    
{% endblock %}
